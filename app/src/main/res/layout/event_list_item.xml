<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:background="@drawable/layout_cornens"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="2dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:padding="1dp">

    <TextView
        android:id="@+id/name_of_event"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/X"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="14dp"
        android:maxLength="8"/>

    <TextView
        android:id="@+id/place_of_event"
        android:layout_width="250dp"
        android:layout_height="20dp"
        android:layout_below="@+id/X"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="-17dp"
        android:fontFamily="@font/baloo_thambi"
        android:maxLength="33"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="11dp" />

    <TextView
        android:id="@+id/date_of_event"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@id/X"
        android:layout_alignLeft="@id/place_of_event"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Data"
        android:textAlignment="center"
        android:textColor="#000000"

        android:textSize="9dp" />

    <TextView
        android:id="@+id/hour_of_value"
        android:layout_width="150dp"
        android:layout_height="20dp"
        android:layout_below="@id/X"
        android:layout_alignRight="@id/place_of_event"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="9dp"
        android:layout_marginBottom="3dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="TextView"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="9dp" />

    <TextView
        android:id="@+id/X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text=""

        />

</RelativeLayout>