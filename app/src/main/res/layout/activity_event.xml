<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="false"
    android:clickable="false"
    tools:context=".AddRecord">

    <TextView
        android:id="@+id/add_new_event"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="240dp"
        android:fontFamily="@font/baloo_thambi"
        android:layout_above="@+id/X"
        android:textColor="#F44336"
        android:layout_centerHorizontal="true"
        android:text="DODAJ NOWE ZDARZENIE"
        android:textAlignment="center"
        android:textSize="25dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/nazwa_zdarzenia_text"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/X"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="210dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Nazwa zdarzenia"
        android:textAlignment="center"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/nazwa_zdarzenia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/X"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="175dp"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="textPersonName" />
    <TextView
        android:id="@+id/textView"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/X"
        android:layout_marginBottom="130dp"
        android:fontFamily="@font/baloo_thambi"
        android:layout_centerHorizontal="true"
        android:text="Miejsce zdarzenia"
        android:textAlignment="center"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/miejsce_zdarzenia"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/X"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="83dp"
        android:ems="10"
        android:textAlignment="center"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/X"
        android:layout_marginBottom="50dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/baloo_thambi"
        android:text="Data zdarzenia"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/Date_event"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:layout_above="@+id/X"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:ems="10"
        android:fontFamily="@font/baloo_thambi"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textSize="20dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/X"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="-25dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Godzina zdarzenia"
        android:textAlignment="center"
        android:textSize="25dp" />

    <TextView
        android:id="@+id/hour_event"
        android:textSize="20dp"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:fontFamily="@font/baloo_thambi"
        android:layout_below="@+id/X"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:inputType="datetime|phone|time" />


    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="31dp"
        android:layout_below="@+id/X"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="109dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Rodzaj zdarzenia"
        android:textAlignment="center"
        android:textSize="25dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="211dp"
        android:layout_height="35dp"
        android:layout_below="@+id/X"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="84dp"
        android:layout_marginEnd="100dp"
        android:paddingTop="50px"
        android:textAlignment="center" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/X"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="135dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Opis zdarzenia"
        android:textAlignment="center"
        android:textSize="25dp" />


    <EditText
        android:id="@+id/info_event"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/X"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="179dp"
        android:layout_marginEnd="76dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Button
        android:id="@+id/addbuttton"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/X"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="241dp"
        android:layout_marginEnd="64dp"
        android:background="#F44336"
        android:clickable="true"
        android:focusable="auto"
        android:fontFamily="@font/baloo_thambi"
        android:onClick="AddRecord"
        android:text="DODAJ ZDARZENIE"
        android:textColor="#FFFFFF"
        android:textSize="9pt" />




    <TextView
        android:id="@+id/X"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="X"
        />
</RelativeLayout>