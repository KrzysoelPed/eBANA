<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animationCache="false"
    android:clickable="false"
    tools:context=".AddRecord">


    <EditText
        android:id="@+id/nazwa_zdarzenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="494dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="373dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="556dp"
        android:fontFamily="@font/baloo_thambi"
        android:lineSpacingExtra="24sp"

        android:text="DODAJ NOWE ZDARZENIE"
        android:textAlignment="center"
        android:textSize="25dp"
        android:typeface="serif" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="455dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Miejsce zdarzenia"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="504dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Nazwa zdarzenia"
        android:textAlignment="center"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/miejsce_zdarzenia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="443dp"
        android:ems="10"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/Date_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="390dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:textAlignment="center" />


    <EditText
        android:id="@+id/hour_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="26dp"
        android:layout_marginBottom="298dp"
        android:ems="10"
        android:inputType="date" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="251dp"
        android:layout_marginBottom="308dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Godzina zdarzenia"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="258dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Rodzaj zdarzenia"
        android:textAlignment="center"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="249dp"
        android:layout_marginBottom="210dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Opis zdarzenia"
        android:textAlignment="center"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/info_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="202dp"
        android:ems="10"
        android:gravity="start|top"
        android:inputType="textMultiLine" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="211dp"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="256dp"
        android:paddingTop="50px" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="254dp"
        android:layout_marginBottom="398dp"
        android:fontFamily="@font/baloo_thambi"
        android:text="Data zdarzenia"
        android:textAlignment="center"
        android:textSize="15sp" />

    <Button
        android:id="@+id/openCalendar"
        android:layout_width="207dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="34dp"
        android:layout_marginBottom="350dp"
        android:background="#F44336"
        android:fontFamily="@font/baloo_thambi"
        android:text="WYBIERZ DATE"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="7pt" />

    <Button
        android:id="@+id/addbuttton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="130dp"
        android:layout_marginBottom="133dp"
        android:clickable="true"
        android:focusable="auto"
        android:onClick="AddRecord"
        android:text="DODAJ ZDARZENIE" />


</RelativeLayout>